%li.list-item.-video
  %div.video-thumbnail{:style => "background: url(#{object.thumbnail_url}) no-repeat center; background-size: cover;"}

  %div.video-data
    %span{:class => "mini-circle-avatar with-username", :style => "background: url(#{object.user.gravatar_url}) no-repeat 0 0;  background-size: contain"}
    %span.username
      = link_to object.user.username, object.user

    %h1.list-title= link_to object.name, object

    - if object.description?
      %p.description= object.description
    - else
      %p.no-description
        There is no description for this video.

    %ul.attributes
      %li{class: "views"}
        %h3 #{object.views.count} views
      %li{class: "comments"}
        %h3 #{object.comments.count} comments
      %li{class: "average-ratings"}
        %h3 #{object.average_rating} average rating
      %li{class: "total-ratings"}
        %h3 #{object.ratings.count} total ratings
