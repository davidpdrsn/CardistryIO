= simple_form_for video, wrapper: :material_form do |f|
  - if params[:thumbnail_url]
    = f.input :thumbnail_url, value: params[:thumbnail_url], as: :hidden
  %div.add-credits-container
    %div.section-headline
      Details
    %div.grid-items-lines
      = f.input :name, label: "Title"
      = f.input :description
      - if video.new_record?
        = f.input :url, hint: video.url_hint, label: "URL"
      = f.input :instagram_id, as: :hidden
      = f.input :video_type, prompt: "Pick a type *", label_method: ->(x) { x.last.humanize }, label: false
      = f.input :private, hint: "A private video can only be accessed with the link and doesn't appear on any lists.", inline_label: "Make video private", label: false

  = render partial: "shared/add_credits_fields", locals: { object: video }

  %div.submit-button
    = f.button :submit, text
