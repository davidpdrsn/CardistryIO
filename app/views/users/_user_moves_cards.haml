%div.cards
  - if moves.present?
    - moves.each do |move|
      = link_to move, {:class => "card"} do
        %div.card-image
          - if move.thumbnail_url.present?
            = image_tag move.thumbnail_url
          - else
            = image_tag "thumbnail-placeholder.png"
        %div.card-header
          = "#{move.name}"
        %div.card-copy
          = "#{move.description}"
        %div.card-meta
          = "posted #{time_ago_in_words(move.created_at)} ago"
          %div.rating
            - if move.ratings.empty?
              = t "ratings.not_rated"
            - else
              - WithRatingStats.new(move).average_rating.round.times do
                %i.icon.ion-android-star
  - else
    %h1= t "users.profile.#{type}.none"
