%div.button-bar
  - if signed_in?
    = render "search_field"
    = render "upload_button"
    = render "notifications_dropdown"
    = render "profile_button"
  - else
    = render "search_field"
    = link_to "Log in", sign_in_path, class: "pill-button-outline"
    = link_to "Sign up", sign_up_path, class: "pill-button-outline"
