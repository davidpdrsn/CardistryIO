%div.main-nav
  %ul
    %li.nav-item{:class => current_path_class('users')}
      %i.icon.ion-person-stalker
      = link_to "All Users", users_path
    %li.nav-item{:class => current_path_class('moves/all')}
      %i.icon.ion-android-hand
      = link_to "All Moves", all_moves_path
    %li.nav-item{:class => current_path_class('videos/all')}
      %i.icon.ion-ios-film
      = link_to "All Videos", all_videos_path

    %li.nav-item{:class => current_path_class('moves')}
      %i.icon.ion-android-hand
      = link_to "My Moves", moves_path
    %li.nav-item{:class => current_path_class('videos')}
      %i.icon.ion-ios-film
      = link_to "My Videos", videos_path

    %hr.menu-divider

    %li.nav-item{:class => current_path_class('videos/featured')}
      %i.icon.ion-ios-film
      = link_to "Featured videos", featured_videos_path

    %hr.menu-divider

    - if signed_in?
      %li.nav-item{:class => current_path_class('videos_shared_with_you')}
        %i.icon.ion-android-share-alt
        = link_to "Videos shared with you", shared_videos_path

      - if current_user.admin?
        %li.nav-item{:class => current_path_class('/admin/approve_videos')}
          = link_to "Approve videos (#{Video.unapproved.count})", approve_videos_path, {:id => "approve-videos"}

      %hr.menu-divider

    %li.nav-item{:class => current_path_class('pages/contact')}
      %i.icon.ion-paper-airplane
      = link_to "Contact", page_path("contact")
